			var eleA = content.getElementsByTagName("a");
			if(eleA.length>0)
				for(var i=0;i<eleA.length;i++)
					eleA[i].removeAttribute("style");
					
			var eleTd = content.getElementsByTagName("td");
			if(eleTd.length>0)
				for(var i=0;i<eleTd.length;i++)
				{
					eleTd[i].style.fontFamily="微软雅黑";
